{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "@nuxtjs/eslint-config-typescript",
    "plugin:nuxt/recommended",
    "plugin:prettier/recommended"
  ],

  "rules": {
    "vue/multi-word-component-names": 0,
    "vue/no-multiple-template-root": 0,
    "prettier/prettier": ["error", { "singleQuote": true, "semi": false }]
  }
}
